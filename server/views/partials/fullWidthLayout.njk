{% extends "moj/template.njk" %}

{% block head %}
  <link href="{{ '/assets/css/application.css' | assetMap }}" rel="stylesheet" />

  {% for css in feComponents.cssIncludes %}
    <link href="{{ css }}" nonce="{{ cspNonce }}" rel="stylesheet" />
  {% endfor %}
{% endblock %}

{% block pageTitle %}{{ pageTitle | default(applicationName) }}{% endblock %}

{% block header %}
  {{ feComponents.header | safe }}
  {% include "./navigation.njk" %}
{% endblock %}

{% block main %}
  <div>
    {% block beforeContent %}{% endblock %}
    <main
      class="govuk-main-wrapper {% if mainClasses %}{{ mainClasses }}{% endif %}"
      id="main-content"
      data-page="{{ pageType | default('') }}"
      {%- if mainLang %}lang="{{ mainLang }}"{% endif %}
    >
      {% block content %}{% endblock %}
    </main>
  </div>
{% endblock %}

{% block bodyStart %}
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="{{ '/assets/js/index.js' | assetMap }}"></script>

  {% for js in feComponents.jsIncludes %}
    <script src="{{ js }}" nonce="{{ cspNonce }}"></script>
  {% endfor %}
{% endblock %}

{% block footer %}
  {{ feComponents.footer | safe }}
{% endblock %}
